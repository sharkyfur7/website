{% extends "layouts/common.njk" %}

{% block head %}
    <link rel="canonical" href="https://furshark.net/{{ canonical }}" />

    <link rel="stylesheet" href="/css/shark.css" />

    <script src="/script/tooltip.js" defer async></script>
{% endblock %}

{% block content %}
    <article class="shark-article">
        {{ content | safe }}
    </article>

    <span class="minor-importance-text">Created: {{ date }} | Last updated: {{ modified }}</span>
{% endblock %}
